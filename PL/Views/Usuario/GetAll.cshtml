@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-lg-start">
    <h2>Usuarios</h2>
    <h5>Listas de usuarios registrados </h5>
</div>
<hr />
<a type="button" href="@Url.Action("Form", "Usuario")" class="btn btn-outline-success btn-lg w-25 p-3"><i class="bi bi-person-add"></i></a>
<hr />

<table class="table">
    <thead>
        <tr>
            <th scope="col"></th>
            <th scope="col">Id Usuario</th>
            <th scope="col">UserName</th>
            <th scope="col">Id Rol</th>
            <th scope="col">Email</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido paterno</th>
            <th scope="col">Apellido materno</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(ML.Usuario usuario in Model.Usuarios) { 
        <tr>
            <th scope="row"><a type="button" class="btn btn-outline-warning btn-lg" href="@Url.Action("Form", "Usuario", new {IdUsuario = usuario.IdUsuario })"><i class="bi bi-pencil-square"></i></a></th>
            <td>@usuario.IdUsuario</td>
            <td>@usuario.UserName</td>
            <td>@usuario.Rol.IdRol</td>
            <td>@usuario.Email</td>
            <td>@usuario.Nombre</td>
            <td>@usuario.ApellidoPaterno</td>
            <td>@usuario.ApellidoMaterno</td>
            <td><a href="@Url.Action("Delete","Usuario" , new { IdUsuario = usuario.IdUsuario})" onclick="return confirm('Estas seguro de eliminar este registro');" type="button" class="btn btn-outline-danger btn-lg"><i class="bi bi-trash3"></i></a>x</td>
        </tr>
        }
    </tbody>
</table>
